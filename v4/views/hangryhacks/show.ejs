<% include ../partials/header %>

<h1><%= hangryhack.name %></h1>

<img src="<%= hangryhack.image %>">

<p><%= hangryhack.description %></p>

<p><a class="btn btn-success" href="/hangryhacks/<%= hangryhack._id %>/comments/new">Add New Comment</a></p>

<% hangryhack.comments.forEach(function(comment){ %>
    <p>
        <strong><%= comment.author %></strong> - <%= comment.text %>
    </p>
<% }) %>

<% include ../partials/footer %>