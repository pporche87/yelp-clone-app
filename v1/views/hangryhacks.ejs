<% include partials/header %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to YelpImHangry!</h1>
            <p>View our artesian recipes that keep you HAPPY when you're HANGRY!</p>
            <p>
                <a class="btn btn-primary btn-lg" href="/hangryhacks/new">Add New HangryHack</a>
            </p>
        </div>
    </header>
    
    <div class="row text-center" style="display:flex; flex-wrap:wrap;">
        <% hangryhacks.forEach(function(hangryhack){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    <img src="<%= hangryhack.image %>">
                    <div class="caption">
                        <h4><%= hangryhack.name %></h4>
                    </div>
                </div>
            </div>
        <% }); %>
    </div>
</div>

<% include partials/footer %>